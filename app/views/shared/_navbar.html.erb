<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.svg", height: 30 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Motels", motels_path, class: "navbar-wagon-item navbar-wagon-link link" %>
      <%= link_to "Bookings", bookings_path, class: "navbar-wagon-item navbar-wagon-link link" %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "navbar-wagon-link link" %>

    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle orange" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <% if user_signed_in? %>
          <li><%= link_to "Motels", motels_path, class: "navbar-wagon-item navbar-wagon-link link" %></li>
          <li><%= link_to "Bookings", bookings_path, class: "navbar-wagon-item navbar-wagon-link link" %></li>
          <li><%= link_to "Logout", destroy_user_session_path, method: :delete, class: "navbar-wagon-link link" %></li>
        <% else %>
          <li><%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link link" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

